<bindings id="caldav-principals-list-bindings"
  xmlns="http://www.mozilla.org/xbl"
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:xbl="http://www.mozilla.org/xbl">
  <binding id="caldav-principals-richlistbox"
           extends="chrome://global/content/bindings/richlistbox.xml#richlistbox"
           xbl:inherits="flex">
    <implementation>	
      <!-- methods -->
      <method name="addPrincipal">
        <parameter name="aPrincipalInfo"/>
        <body><![CDATA[ 
		  var newNode = createXULElement("caldav-principals-richlistitem");
		  this.appendChild(newNode);
		  newNode.setAttribute("anonid", "principals-listitem");
		  
		  if(( aPrincipalInfo.displayName != null) && (aPrincipalInfo.displayName.length > 0) ) {
		    newNode.displayName = aPrincipalInfo.displayName;
		  } else {
		    newNode.displayName = aPrincipalInfo.principal;
		  }
		  newNode.uri = aPrincipalInfo.principal;
		  newNode.calendarHomeSet = aPrincipalInfo.calendarHomeSet;
		  newNode.type = aPrincipalInfo.type;
		  newNode.mail = aPrincipalInfo.mail;
		  
		  return newNode;
        ]]></body>
      </method>
      <method name="clear">
        <body><![CDATA[
		  while (this.lastChild) {
            this.removeChild(this.lastChild);
          }
        ]]></body>
      </method>
    </implementation>
  </binding>

  <binding id="caldav-principals-richlistitem"
           extends="chrome://global/content/bindings/richlistbox.xml#richlistitem">
    <content>
		<xul:hbox flex="1">
			<xul:label anonid="principal-name"/>
		</xul:hbox>
    </content>

    <implementation>

      <!-- fields -->
      <field name="mDisplayName">null</field>
      <field name="mURI">null</field>
	  <field name="mMail">null</field>
	  <field name="mCalendarHomeSet">null</field>
	  <field name="mType">null</field>
      <!-- properties -->

      <property name="displayName">
        <getter><![CDATA[
          return this.mDisplayName;
        ]]></getter>
        <setter><![CDATA[
          this.mDisplayName = val;
		  var label = document.getAnonymousElementByAttribute(this, "anonid", "principal-name");
          label.setAttribute("value", val);
          return val;
        ]]></setter>
      </property>

      <property name="uri">
        <getter><![CDATA[
          return this.mURI;
        ]]></getter>
        <setter><![CDATA[
          this.mURI = val;
          return val;
        ]]></setter>
      </property>
	  <property name="mail">
        <getter><![CDATA[
          return this.mMail;
        ]]></getter>
        <setter><![CDATA[
          this.mMail = val;
		  var label = document.getAnonymousElementByAttribute(this, "anonid", "principal-name");
          label.setAttribute("tooltiptext", val);
          return val;
        ]]></setter>
      </property>
	  <property name="type">
        <getter><![CDATA[
          return this.mType;
        ]]></getter>
        <setter><![CDATA[
          this.mType = val;
		  var label = document.getAnonymousElementByAttribute(this, "anonid", "principal-name");
          label.className += " " + val;
          return val;
        ]]></setter>
      </property>

	  <property name="calendarHomeSet">
        <getter><![CDATA[
          return this.mCalendarHomeSet;
        ]]></getter>
        <setter><![CDATA[
          this.mCalendarHomeSet = val;
          return val;
        ]]></setter>
      </property>
      <!-- methods -->
    </implementation>
  </binding>
</bindings>