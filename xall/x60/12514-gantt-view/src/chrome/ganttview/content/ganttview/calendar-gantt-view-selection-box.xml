<!-- Note that this file depends on helper functions in calUtils.js-->

<!-- DTD File with all strings specific to the calendar -->
<!DOCTYPE overlay 
 [
  <!ENTITY % dtd1 SYSTEM "chrome://calendar/locale/global.dtd">
  %dtd1;
  <!ENTITY % dtd2 SYSTEM "chrome://calendar/locale/calendar.dtd">
  %dtd2;
  <!ENTITY % GanttView.mainDTD SYSTEM "chrome://ganttview/locale/ganttview.dtd">
  %GanttView.mainDTD;
]>

<bindings id="GanttView-bindings"
 xmlns="http://www.mozilla.org/xbl"
 xmlns:html="http://www.w3.org/1999/xhtml"
 xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
 xmlns:xbl="http://www.mozilla.org/xbl">

  <binding id="GanttView-selection-box">
    <content>
      <xul:box class="selection-border" flex="1">
        <xul:box class="selection-box" flex="1"/>
      </xul:box>
    </content>

    <implementation>
      <constructor>
        <![CDATA[

			]]>
      </constructor>

      <field name="mMouseDownGridX">null</field>
      <field name="mMouseDownGridY">null</field>

      <property name="mouseDownGridX"
       onget="return this.mMouseDownGridX;"
       onset="return (this.mMouseDownGridX = val);"/>

      <property name="mouseDownGridY"
       onget="return this.mMouseDownGridY;"
       onset="return (this.mMouseDownGridY = val);"/>

      <property name="currentGridX">
        <setter>
          <![CDATA[
           
           if (val >= this.mouseDownGridX) {
						this.setAttribute("left", this.mouseDownGridX)
						this.setAttribute("width", val - this.mouseDownGridX)

					 } else {
						this.setAttribute("left",val)
						this.setAttribute("width", this.mouseDownGridX - val)
					 //} else {
            //this.setAttribute("left",0)
						//this.setAttribute("width", this.mouseDownGridX)
           }
					 
           return val;
        ]]>
        </setter>
      </property>

      <property name="currentGridY">
        <setter>
          <![CDATA[
           if (val >= this.mouseDownGridY) {
						this.setAttribute("top", this.mouseDownGridY)
						this.setAttribute("height", val - this.mouseDownGridY)

					 } else {
						this.setAttribute("top",val)
						this.setAttribute("height", this.mouseDownGridY - val)

						//} else {
            //this.setAttribute("top",0)
						//this.setAttribute("height", this.mouseDownGridY)
					 }
           return val;
        ]]>
        </setter>
      </property>

    </implementation>
  </binding>


</bindings>