# Basic
content esign chrome/content/
resource esign chrome/modules/

# Skin
skin esign default chrome/content/skin/default

# Locale
locale esign ru chrome/content/locale/ru/

# Overlay for message editor
overlay chrome://messenger/content/messengercompose/messengercompose.xul chrome://esign/content/component/esignMsgComposeOverlay.xul

# Overlay for mailWindowOverlay
overlay chrome://messenger/content/mailWindowOverlay.xul chrome://esign/content/component/esignMessengerOverlay.xul

# Interfaces
interfaces components/esignGlobal.xpt

# Basic service
component {2297087c-14ee-48d7-bfc9-bab2d8886df8} components/esign.js
contract @mozilla.org/esign/cline-handler;1 {2297087c-14ee-48d7-bfc9-bab2d8886df8}
