<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">
    <em:id>replywithheader@myjeeva.com</em:id>
    <em:name>ReplyWithHeader</em:name>
    <em:version>2.1.0</em:version>
    <em:optionsType>3</em:optionsType>
    <em:unpack>false</em:unpack>
    <em:creator>Jeevanandam M.</em:creator>
    <em:description>Outlook style headers and few goodies for Thunderbird &amp; Postbox.</em:description>
    <em:homepageURL>https://myjeeva.com/replywithheader-mozilla</em:homepageURL>
    <em:optionsURL>chrome://replywithheader/content/rwh-prefs.xul</em:optionsURL>
    <em:icon64URL>chrome://replywithheader/skin/icon-64.png</em:icon64URL>

    <!-- Thunderbird -->
    <em:targetApplication>
      <Description>
        <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
        <em:minVersion>57.*</em:minVersion>
        <em:maxVersion>60.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- Postbox -->
    <em:targetApplication>
      <Description>
        <em:id>postbox@postbox-inc.com</em:id>
        <em:minVersion>3.0</em:minVersion>
        <em:maxVersion>5.*</em:maxVersion>
      </Description>
    </em:targetApplication>

  </Description>
</RDF>
