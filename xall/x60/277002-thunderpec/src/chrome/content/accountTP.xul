          <column flex="3"/>
        </columns>
        <rows>
          <row>
            <label class="bluelabel" value="&account.outserver.title;" />
            <textbox id="tpecOutgoingServer"/>
            <label class="redlabel" id="tpecOutgoing01" value="&account.outserver.error01;" />
          </row>
          <row>
            <label class="bluelabel" value="&account.outport.title;" />
            <textbox id="tpecOutgoingPort"/>
            <label class="redlabel" id="tpecOutgoing02" value="&account.outserver.error02;" />
          </row>
          <row>
            <label class="bluelabel" value="&account.outssl.title;" />
            <checkbox id="tpecOutgoing02"/>
          </row>
        </rows>
      </grid>
    </vbox>
  </wizardpage>

  <wizardpage 
    label ="&account.outuser.title;" 
    pageid="outcredential"
    next="last"
    onpageshow="tpec_org.xtc.tp.account.outuserShow();"
    onpageadvanced="tpec_org.xtc.tp.account.outuserNext();" 
    >

    <vbox>
      <hbox>
        <spacer flex="1"/>
        <image src='img/tpec.01.png'  width='48' height='20'/>
      </hbox>
      <description>&account.outuser.description;</description>
      <spacer class="vspacer"/>
