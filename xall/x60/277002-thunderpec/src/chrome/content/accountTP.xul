          <column flex="1"/>
          <column flex="2"/>
          <column flex="3"/>
        </columns>
        <rows>
          <row>
            <label class="bluelabel" value="&account.inuser.user;" />
            <textbox id="tpecIncomingUser"/>
            <label class="redlabel" id="tpecInuser01" value="&account.inuser.error01;" />
          </row>
          <row>
            <label class="bluelabel" value="&account.inuser.pwd;" />
            <textbox id="tpecIncomingPwd" type="password"/>
            <label class="redlabel" id="tpecInuser02" value="&account.inuser.error02;" />
          </row>
        </rows>
      </grid>
    </vbox>
  </wizardpage>

  <wizardpage 
    label ="&account.outserver.title;" 
    pageid="outgoing"
    next="outcredential"
    onpageshow="tpec_org.xtc.tp.account.outserverShow();"
    onpageadvanced="tpec_org.xtc.tp.account.outserverNext();" 
    >

    <vbox>
      <hbox>
        <spacer flex="1"/>
        <image src='img/tpec.01.png'  width='48' height='20'/>
      </hbox>
      <description>&account.outserver.description;</description>
      <spacer class="vspacer"/>
      <grid>
