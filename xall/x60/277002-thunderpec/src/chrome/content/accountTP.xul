          </row>
          <row>
            <label class="bluelabel" value="&account.outuser.pwd;" />
            <textbox id="tpecOutgoingPwd" type="password"/>
            <label class="redlabel" id="tpecOutuser02" value="&account.outuser.error01;" />
          </row>
        </rows>
      </grid>
    </vbox>
  </wizardpage>

  <wizardpage 
    label ="&account.last.title;" 
    pageid="last"
    next=""
    onpageshow="tpec_org.xtc.tp.account.lastShow();"
    onpageadvanced="tpec_org.xtc.tp.account.lastNext();" 
    >

    <vbox>
      <hbox>
        <spacer flex="1"/>
        <image src='img/tpec.01.png'  width='48' height='20'/>
      </hbox>
      <description>&account.last.description;</description>
      <spacer class="vspacer"/>
      <grid>
        <columns>
          <column flex="1"/>
        </columns>
        <rows>
          <row>
            <label class="bluelabel" value="&account.last.title;" />
          </row>
        </rows>
      </grid>
    </vbox>
  </wizardpage>
  
</wizard>
