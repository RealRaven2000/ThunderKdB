<?xml version="1.0"?>
<?xml-stylesheet href="chrome://autocopy/skin/autocopy.css" type="text/css"?>

<!DOCTYPE prefwindow SYSTEM "chrome://autocopy/locale/autocopy.dtd">

<prefwindow id="autocopy-options-dialog" title="&pref.autocopyTitle;"
      xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
      onfocus="AutoCopyOptions.testblacklist()">

  <prefpane id="settings" flex="1" label="&pref.autocopyPrefPane;" onpaneload="AutoCopyOptions.loadSettings()">
    <preferences>
      <preference id="paste-on-middle-click"
                  name="extensions.autocopy.optPasteOnMiddleClick"
                  type="bool" />
      <preference id="deselect-after-copy"
                  name="extensions.autocopy.optDeselectAfterCopy"
                  type="bool" />
      <preference id="enable-in-textboxes"
                  name="extensions.autocopy.optEnableInTextBoxes"
                  type="bool" />
      <preference id="status-bar-blink"
                  name="extensions.autocopy.optStatusbarBlink"
                  type="bool" />
      <preference id="copy-without-formatting"
                  name="extensions.autocopy.optCopyWithoutFormatting"
                  type="bool"
                  instantApply="true" />
      <preference id="tool-bar"
                  name="extensions.autocopy.optToolBarButton"
                  instantApply="true"
                  type="bool" />
      <preference id="add-to-blacklist"
                  name="extensions.autocopy.optAddToBlacklistMenu"
                  type="bool" />
      <preference id="status-bar"
                  name="extensions.autocopy.optStatusBar"
                  type="bool" />
      <preference id="edit-menu-item"
                  name="extensions.autocopy.optEditMenuItem"
                  type="bool" />
      <preference id="context-menu-item"
                  name="extensions.autocopy.optContextMenuItem"
                  type="bool" />
      <preference id="context-menu"
                  name="extensions.autocopy.optContextMenu"
                  type="bool" />
      <preference id="context-hide-timeout"
                  name="extensions.autocopy.optContextMenuHideTimeout"
                  type="int" />
    </preferences>
    <groupbox id="prefs">
      <caption label="&pref.autocopyOptionsGroup;" />
      <checkbox id="autocopyPasteOnMiddleClick"
                label="&pref.autocopyPasteOnMiddleClick;"
                preference="paste-on-middle-click" />
      <checkbox id="autocopyDeselectAfterCopy"
                label="&pref.autocopyDeselectAfterCopy;"
                preference="deselect-after-copy" />
      <checkbox id="autocopyEnableInTextBoxes"
                label="&pref.autocopyEnableInTextBoxes;"
                preference="enable-in-textboxes" />
      <checkbox id="autocopyStatusbarBlink"
                label="&pref.autocopyStatusbarBlink;"
                preference="status-bar-blink" />
      <hbox>
        <checkbox id="autocopyCopyWithoutFormatting"
                  label="&pref.autocopyCopyWithoutFormatting;"
                  oncommand="AutoCopyOptions.alertDisplay();"
                  preference="copy-without-formatting" />
        <image id="autocopyHelp"
               class="helpButton"
               tooltiptext="&pref.autocopyCopyWithoutFormatting.tooltip;"
               onclick="AutoCopyOptions.helpInfo();" />
      </hbox>
    </groupbox>
    <groupbox id="display">
      <caption label="&pref.autocopyDisplayGroup;" />
      <checkbox id="autocopyToolBar"
                label="&pref.autocopyToolBarButton;"
                instantApply="true"
                preference="tool-bar" />
      <checkbox id="autocopyStatusBar"
                label="&pref.autocopyStatusBarButton;"
                preference="status-bar" />
      <checkbox id="autocopyEditMenuItem"
                label="&pref.autocopyEditMenuItem;"
                preference="edit-menu-item" />
      <checkbox id="addtoblacklistmenu"
                label="&pref.autocopyBlacklistMenuItem;"
                instantApply="true"
                preference="add-to-blacklist" />
      <checkbox id="autocopyContextMenuItem"
                label="&pref.autocopyContextMenuItem;"
                preference="context-menu-item" />
      <checkbox id="autocopyContextMenu"
                label="&pref.autocopyContextMenu;"
                oncommand="AutoCopyOptions.showHideMenu();"
                preference="context-menu" />
      <hbox id="timeout" align="center" class="indent">
        <label id="timeoutLabel"
               value="&pref.autocopyContextMenuHideTimeout;"
               control="autocopyContextMenuHideTimeout" />
        <textbox id="autocopyContextMenuHideTimeout"
                 width="45"
                 oninput="AutoCopyOptions.validateContextTimeout();"
                 preference="context-hide-timeout" />
        <label id="msLabel" value="&pref.autocopyContextMenuHideTimeoutUnits;" />
      </hbox>
    </groupbox>
  </prefpane>
 
  <prefpane id="blacklistpane" flex="1" label="&pref.autocopyBlacklistPane;" onpaneload="AutoCopyOptions.showblacklist()">
    <preferences />
    <groupbox id="blacklist">
      <caption label="&pref.autocopyBlacklistGroup;" />
      <label class="achint">&pref.autocopyBlacklistGroupToltip;</label>
      <listbox id="urlList" seltype="single" flex="1">
        <listhead>
          <listheader label="&pref.autocopyBlacklistGroupURL;" />
        </listhead>
        <listcols>
          <listcol flex="1"/>
        </listcols>
      </listbox>
      <separator class="thin" />
      <hbox pack="start">
        <button label="&pref.autocopyBlacklistGroupAdd;" type="panel">
          <panel id="addURLpanel"
                 type="arrow"
                 orient="vertical"
                 noautohide="true">
            <hbox pack="end">
              <toolbarbutton class="paneladdurl"
                       tooltiptext="&pref.autocopyBlacklistGroupClose;"
                       oncommand="AutoCopyOptions.hiddentextboxpanel()"/>
            </hbox>
            <hbox id="notifbox" pack="center">
              <label id="pageExist" value="&pref.autocopyBlacklistGroupExists;" class="itemcolor" hidden="true" />
              <label id="invalidURL" value="&pref.autocopyBlacklistGroupInvalid;" class="itemcolor" hidden="true" />
            </hbox>
            <separator class="thin" />
            <label control="nameURL" value="&pref.autocopyBlacklistGroupURL;:" />
            <textbox id="nameURL" width="200" value="" placeholder="&pref.autocopyBlacklistGroupPlaceholder;" />
            <separator />
            <hbox id="addItemButtonBox" pack="end">
              <button id="addItemButton"
                label="OK"
                oncommand="AutoCopyOptions.addtoblacklist();" />
            </hbox>
          </panel>
        </button>
        <button id="removeItemButton" label="&pref.autocopyBlacklistGroupDelete;" oncommand="AutoCopyOptions.removefromblacklist();" />
      </hbox>
    </groupbox>
  </prefpane>

  <prefpane id="shortcut" label="&pref.autocopyShortcutPane;" flex="1">
    <preferences>
      <preference id="shortcut-enabled"
                  name="extensions.autocopy.optKeyboardShortcutEnabled"
