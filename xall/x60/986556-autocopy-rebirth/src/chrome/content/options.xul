                  type="bool" />
      <preference id="shortcut-alt"
                  name="extensions.autocopy.optKeyboardShortcutKeyAlt"
                  type="bool" />
      <preference id="shortcut-key"
                  name="extensions.autocopy.optKeyboardShortcutKey"
                  type="string" />
    </preferences>
    <groupbox id="shortcuts">
      <caption label="&pref.autocopyShortcutGroup;" />
      <checkbox id="autocopyKeyboardShortcutEnabled"
