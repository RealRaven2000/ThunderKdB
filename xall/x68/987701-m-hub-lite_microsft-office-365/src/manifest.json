{
  "manifest_version": 2,
  "description": "Microsoft Office 365 Tabs for Mozilla Thunderbird",
  "name": "M-Hub Lite",
  "version": "2.0.0",
  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
	"webNavigation",
	"webRequest"
  ],
  "developer": {
    "name": "Chris Schiffner",
    "url": "https://www.schiffner.com/"
  },
  "applications": {
    "gecko": {
      "id": "mhublite@schiffner.com",
      "strict_min_version": "63.0"
    }
  },
  "icons": {
	"32": "chrome/content/img/icon32.png",
    "48": "chrome/content/img/icon48.png",
    "64": "chrome/content/img/icon64.png"
  },
  "browser_action": {
      "default_icon": {
        "16": "chrome/content/img/icon16.png",
        "32": "chrome/content/img/icon32.png",
		"64": "chrome/content/img/icon64.png"
      },
	  "default_popup": "chrome/content/m-hub_lite_menu.html"
    },
  "options_ui": {
    "page": "chrome/content/options_lite.html",
	"chrome_style": true
  },
  "background": {
  	 "scripts": ["chrome/content/loader.js"]
  }
}
