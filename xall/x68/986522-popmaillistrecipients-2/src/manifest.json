{
  "manifest_version": 2,
  "version": "2.3",
  "name": "PopmailListRecipients",
  "description": "Expands address book lists to recipients addresses.",
  "default_locale":"en",
  "developer": {
    "name": "Sven Giermann"
  },
  "applications": {
    "gecko": {
      "id": "popmaillistrecipients@funke.nz",
      "strict_min_version": "74.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
     "48": "icons/icon.png"
  },
  "compose_action": {
    "default_title": "Explode"
  },
  "permissions": ["compose", "addressBooks"]
}
