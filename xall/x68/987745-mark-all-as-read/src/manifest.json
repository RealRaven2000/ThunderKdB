{
    "manifest_version": 2,
    "name": "Mark All As Read",
    "description": "Attempt to revive \"Mark All Read Button\" by Mark S Baines",
    "version": "0.2",
    "author": "fredy",
    "applications": {
        "gecko": {
            "id": "mark-all-as-read@fredy.gr",
            "strict_min_version": "68.0"
        }
    },
    "browser_action": {
        "default_title": "Mark All Read",
        "default_icon": "images/icon-32px.png"
    },
    "permissions": [
        "accountsRead",
        "messagesRead"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "64": "images/icon.png",
        "32": "images/icon-32px.png",
        "16": "images/icon-16px.png"
    }
}
