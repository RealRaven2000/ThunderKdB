{
  "manifest_version": 2,
  "version": "3.3.1",
  "name": "Single Domain",
  "description": "Warns you if you send mail to outside or into a specified domain.",
  "developer": {
    "name": "Graeme"
  },
  "applications": {
    "gecko": {
      "id": "singledomain@graeme.henry",
      "strict_min_version": "66.0"
    }
  },
  "experiment_apis": {
    "myapi": {
      "schema": "myapi/schema.json",
      "parent": {
        "scopes":["addon_parent"],
        "paths": [["myapi"]],
        "script": "myapi/implementation.js"
      }
    },
    "oldPrefs": {
      "schema": "oldPrefs/schema.json",
      "parent": {
        "scopes":["addon_parent"],
        "paths": [["oldPrefs"]],
        "script": "oldPrefs/implementation.js"
      }
    }
  },

  "background": {
    "scripts": [
      "ui/util/utils.js",
      "ui/util/stringbundle.js",
      "singledomain.js"
    ]
  },
  "icons": {
     "48": "icons/icon.png"
  },
  "options_ui": {
    "page": "ui/settings/settings.html",
    "browser_style": false
  },
  "permissions": ["storage"]
}
