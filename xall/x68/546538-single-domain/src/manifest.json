{
  "manifest_version": 2,
  "version": "3.8",
  "name": "Single Domain",
  "description": "Warns you if you send mail to outside or into a specified domain.",
  "default_locale":"en",
  "developer": {
    "name": "Graeme"
  },
  "applications": {
    "gecko": {
      "id": "singledomain@graeme.henry",
      "strict_min_version": "76.0"
    }
  },
  "experiment_apis": {
    "myapi": {
      "schema": "myapi/schema.json",
      "parent": {
        "scopes":["addon_parent"],
        "paths": [["myapi"]],
        "script": "myapi/implementation.js"
    }
   }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
     "48": "icons/icon.png"
  },
  "compose_action": {
    "default_title": "Expand Addresses"
  },

  "options_ui": {
    "page": "settings/settings.html",
    "browser_style": true
  },
  "permissions": [ "storage", "compose", "addressBooks","accountsRead"]
}
