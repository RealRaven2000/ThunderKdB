{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.7",
  "author": "alta88",
  "homepage_url": "https://bitbucket.org/alta8888/browseintab",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "browseintab@mozdev.org",
      "strict_min_version": "68.0"
    }
  },

  "permissions": [
    "storage"
  ],

  "options_ui": {
    "page": "content/options.html"
  },

  "icons": {
    "48": "skin/browse-in-tab48.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "user_scripts": {
    "api_script": "content/browseintab.js"
  },

  "experiment_apis": {
    "browseintab": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          ["browseintab"]
        ],
        "script": "experiments.js"
      }
    }
 }
}
