{
  "manifest_version": 2,
  "name": "Toggle Message Pane",
  "description": "Adds a Preview Button, toggles the message preview",
  "version": "1.0",
  "experiment_apis": {
    "toggleMessagePaneApi": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "toggleMessagePaneApi"
          ]
        ],
        "script": "implementation.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Preview",
    "default_area": "tabstrip",
    "default_icon": "toggleMessagePane.svg"
  },
  "applications": {
    "gecko": {
      "id": "toggleMessagePane@dillinger",
      "strict_min_version": "68.0"
    }
  },
  "icons": {
    "32": "toggleMessagePane.svg",
    "64": "toggleMessagePane.svg"
  }
}
