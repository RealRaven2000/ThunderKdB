{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.2",
  "author": "alta88",
  "homepage_url": "https://bitbucket.org/alta8888/messagepreview",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "messagepreview@mozdev.org",
      "strict_min_version": "68.0"
    }
  },

  "permissions": [
    "storage"
  ],

  "options_ui": {
    "page": "content/options.html"
  },

  "icons": {
    "48": "skin/messagePreview48.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "user_scripts": {
    "api_script": "content/messagePreview.js"
  },

  "experiment_apis": {
    "messagepreview": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          ["messagepreview"]
        ],
        "script": "experiments.js"
      }
    }
  }
}
